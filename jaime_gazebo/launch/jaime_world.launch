<?xml version="1.0"?>
<launch>
    <!-- robot configuration -->
	<arg name="model_type"     default="jaime_standalone"/>

    <!-- GUI -->
	<arg name="rviz"           default="true"/>
    <arg name="gazebo_gui"     default="true"/>

    <!-- robot simulation -->
    <arg name="use_sim_time"   default="true"/>
    <arg name="paused"   default="false"/>

    <!-- args to spawn objects and the world -->
    <arg name="seed" default="1"/>
    <arg name="worldname" default="stage"/>



    <!-- Launch Gazebo with empty world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find uchile_gazebo)/worlds/$(arg worldname).world"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="gui" value="$(arg gazebo_gui)"/>
        <arg name="verbose" value="true"/>
        <arg name="paused" value="$(arg paused)"/>
    </include>


   
    
    <!--include file="$(find jaime_joy)/launch/joysticks.launch"/-->
    <include file="$(find uchile_cmd_vel_mux)/launch/mux_jaime.launch"/>
    <!-- spawn objects to the world -->
    <node pkg="uchile_gazebo" type="spawn_objects_$(arg worldname)" name="spawn_objects_$(arg worldname)" args="--seed $(arg seed)" output="screen"/>
</launch>
